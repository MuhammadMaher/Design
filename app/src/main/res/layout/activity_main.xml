<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context=".MainActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:text="Account Type"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeofedittext"
            android:hint="User"
            android:paddingStart="23dp"
            android:text=""
            android:textColor="#B2252424" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="First name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeofedittext"
            android:drawableStart="@drawable/ic_person1"
            android:drawablePadding="3dp"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="#B2252424"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Last name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeofedittext"
            android:drawableStart="@drawable/ic_person1"
            android:drawablePadding="3dp"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="#B2252424" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Phone number"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeofedittext"
            android:drawableStart="@drawable/ic_round_phone_24"
            android:drawablePadding="3dp"
            android:inputType="phone"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="#B2252424" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Email address"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeofedittext"
            android:drawableStart="@drawable/ic_round_email_24"
            android:drawablePadding="3dp"
            android:hint="devmohamed23@gmail.com"
            android:inputType="textWebEmailAddress"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="#B2252424" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Birthday"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeofedittext"
            android:drawableStart="@drawable/ic_birth"
            android:drawablePadding="3dp"
            android:inputType="numberSigned"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="#B2252424" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Country"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeofedittext"
            android:drawableStart="@drawable/ic_round_flag_24"
            android:drawablePadding="3dp"
            android:inputType="text"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="#B2252424" />
    </LinearLayout>

    <LinearLayout
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="50"
                android:weightSum="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Government"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shapeofedittext"
                    android:drawableStart="@drawable/ic_round_filter_hdr_24"
                    android:drawablePadding="3dp"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColor="#B2252424" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Gender"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shapeofedittext"
                    android:drawablePadding="3dp"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:text=""
                    android:textColor="#B2252424" />
            </LinearLayout>

            <LinearLayout
                android:weightSum="50"
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="District"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shapeofedittext"
                    android:layout_gravity="center"
                   android:inputType="text"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColor="#B2252424" />

                <TextView
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Marital status"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shapeofedittext"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:text=""
                    android:textColor="#B2252424" />


            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Description"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shapeofedittext"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="#B2252424" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Hobbies"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shapeofedittext"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="#B2252424" />

        <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/buttoncolor"
        android:backgroundTint="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="Update profile"
        android:textColor="@color/white">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>
</LinearLayout>
</ScrollView>
